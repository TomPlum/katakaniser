{
  "name": "nyuusu-backend",
  "description": "A simple backend for the nyusu website. Proxies API requests to be able to hide secrets and avoid CORS issues.",
  "main": "index.ts",
  "type": "commonjs",
  "engines": {
    "node": "20.x"
  },
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm ./index.ts",
    "test": "PORT=8082 jest",
    "test:ci": "PORT=8082 jest --ci",
    "serve": "tsc | node dist/index.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "babel-preset-env": "^1.7.0",
    "jest": "^29.7.0",
    "msw": "^2.0.10",
    "superagent": "^8.1.2",
    "supertest": "^6.3.3",
    "typescript": "^5.0.2"
  }
}
